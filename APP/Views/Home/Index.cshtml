@model IEnumerable<WebApp.Models.Region>

<h2>Regiones disponibles</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th width="65%">Región</th>
            <th width="35%">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var region in Model)
        {
            <tr>
                <td>@region.Nombre</td>
                <td>
                    <!-- Ver Comunas (solo token en URL) -->
                    <a href="@Url.Action("Comunas", "Home", new { t = region.Token })" class="btn btn-info btn-sm">
                        <i class="fas fa-eye"></i>
                    </a>

                    <!-- Botones restantes (pueden quedar como están si no requieren ocultar ID) -->
                    <a href="@Url.Action("Agregar", "Home", new { id = region.IdRegion })" class="btn btn-success btn-sm">
                        <i class="fas fa-plus"></i>
                    </a>
                    <a href="@Url.Action("Editar", "Home", new { id = region.IdRegion })" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a href="@Url.Action("Eliminar", "Home", new { id = region.IdRegion })" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
